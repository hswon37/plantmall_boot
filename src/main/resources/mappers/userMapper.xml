<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.plantmall.dao.mybatis.mapper.UserMapper">
 
    <!-- 유저 목록 조회 -->
    <select id="selectList" resultType="User">
        SELECT EMAIL
          FROM USER_TABLE
    </select>
    
    <insert id="insertUser" parameterType="User">
    	INSERT INTO USER_TABLE
    	(userId,userName,password,email,phone,zipcode,address)
    	VALUES
    	(#{userId},#{userName},#{password},#{email},#{phone},#{zipcode},#{address})
    </insert>

    <select id="getAccountByUsernameAndPassword" resultType="User">
	    SELECT
	    	USERID,
	    	USERNAME,
	    	EMAIL,
	    	PHONE,
	    	ZIPCODE,
	    	ADDRESS
	    FROM USER_TABLE
	    WHERE USER_TABLE.EMAIL = #{param1}
	      AND USER_TABLE.PASSWORD = #{param2}

  </select>

</mapper>